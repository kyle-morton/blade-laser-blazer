@page "/teams"
@inherits IndexBase

<h4>MLB Teams</h4>

<a href="/teams/create" class="btn btn-primary">Create Team</a>

@if (teams == null)
{
    <p>Loading...</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>City</th>
                <th>Nickname</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var team in teams)
            {
                <tr>
                    <td>@team.Location</td>
                    <td>@team.Name</td>
                </tr>
            }
        </tbody>
    </table>

    @if (canLoadMore)
    {
        <button class="btn btn-primary" @onclick="LoadMore">Load More...</button>
    }

}
